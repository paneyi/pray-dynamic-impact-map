{
	"compilerOptions": {
		"esModuleInterop": true,
		"lib": [
			"ESNext"
		],
		"module": "ESNext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"target": "ESNext"
	},
	"ts-node": {
		"esm": true,
		"experimentalSpecifierResolution": "node",
	}
}